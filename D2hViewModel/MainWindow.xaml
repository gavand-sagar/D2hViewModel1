<Window x:Class="D2hViewModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2hViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
    
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Username,Source={StaticResource MainWindowViewModel}}" Height="100" Width="300"></TextBox>
            <Label Content="{Binding Validation,Source={StaticResource MainWindowViewModel}}" Height="100" Width="300"></Label>
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
